
<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">News Scraper</h1>
        <h3 class="lead">Your Saved Articles</h3>
    </div>
</div>

<ul>
    {{#each articles}}
        {{#if saved}}
        <div class="card">
            <div class="card-body">
                <a href={{{ link }}}><h5 class="card-title">{{{ title }}}</h5></a>
                <hr>
                <h5 class="card-title">{{{ title }}}</h5>
                <p class="card-text">{{{ summary }}}</p>
                <button type="button" class="btn btn-danger delArticle" data-id="{{_id}}">Delete</button>
            </div>
        </div>
        {{/if}}
    {{else}}
            <div class="card">
                <div class="card-body text-center">
                    <h2>No Articles Saved!</h2>
                </div>
            </div>

    {{/each}}
</ul>

