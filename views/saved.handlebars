<div class="jumbotron jumbotron-fluid">
    <div class="container text-center">
        <h1 class="display-4">News Scraper</h1>
        <h3 class="lead">Your Saved Articles</h3>
    </div>
</div>

<ul>
    {{#each article}}
        {{#if saved}}

        <div class="col">
            <div class="card">
                <div class="card-body">
                    <a href="{{{ link }}}"><h5 class="card-title dim">{{{ title }}}</h5></a>
                    <hr>
                    <p class="card-text">{{{ summary }}}</p>
                    <button type="button" class="btn btn-danger delArticle my-2 my-sm-0" data-id="{{_id}}">Delete</button>
                </div>
            </div>
        </div>
            <br>
        {{/if}}
    {{else}}
        <div class="card">
            <div class="card-body text-center">
                <h2>No Articles Saved!</h2>
            </div>
        </div>


    {{/each}}
</ul>

